# .wgetrc — wget configuration
# Part of ~/dotfiles — managed via install.sh

# Resume partial downloads (matches the alias wget='wget -c')
continue = on

# Use server-provided filenames for Content-Disposition
content_disposition = on

# Timestamping — only download newer files
timestamping = on

# Timeout (seconds)
timeout = 60

# Number of retries
tries = 3

# Prefer IPv4 (avoids slow IPv6 fallback on some networks)
prefer-family = IPv4

# Wait between requests when mirroring (be polite)
wait = 1
