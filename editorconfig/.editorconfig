# .editorconfig — Editor configuration
# Part of ~/dotfiles — managed via install.sh
#
# EditorConfig helps maintain consistent coding styles across editors.
# See https://editorconfig.org

root = true

# ── Defaults ──
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# ── Web / Frontend (2-space) ──
[*.{js,jsx,ts,tsx,css,scss,less,html,json,yaml,yml,vue,svelte}]
indent_size = 2

# ── Makefiles (tabs required) ──
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# ── Go (tabs by convention) ──
[*.go]
indent_style = tab

# ── Markdown (preserve trailing whitespace for line breaks) ──
[*.{md,mdx}]
trim_trailing_whitespace = false

# ── Shell scripts ──
[*.{sh,bash,zsh}]
indent_size = 4

# ── TOML ──
[*.toml]
indent_size = 2

# ── Git configs ──
[.gitconfig]
indent_style = tab
