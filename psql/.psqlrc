-- ~/.psqlrc — PostgreSQL client defaults
-- Part of ~/dotfiles — managed via install.sh

-- Don't echo these setup commands
\set QUIET 1

-- Display NULLs visibly
\pset null '(null)'

-- Auto-expand wide tables
\x auto

-- Show query timing
\timing

-- Dedicated history per database
\set HISTFILE ~/.psql_history-:DBNAME
\set HISTSIZE 10000
\set HISTCONTROL ignoredups

-- Colored informational prompt: dbname=>
\set PROMPT1 '%[%033[1;32m%]%/%[%033[0m%]%R%# '
\set PROMPT2 '%[%033[1;32m%]%/%[%033[0m%]%R%# '

-- Verbose errors
\set VERBOSITY verbose

-- Re-enable output
\set QUIET 0
